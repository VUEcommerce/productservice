# There can only be one graphsqls file in spring service
type Product {
    sku: ID!,
    name: String!,
    brand: String,
    price: Float,
    quantity: Int,
    description: String,
    weight: Float,
    image: String
}

type Clothes {
    sku: ID!,
    brand: String,
    name: String!,
    price: Float,
    quantity: Int,
    description: String,
    weight: Float,
    image: String,
    size: String
}

# There can only be one Query
type Query {
    getClothes(sku: ID, name: String): Clothes
}

