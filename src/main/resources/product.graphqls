# There can only be one graphsqls file in spring service
interface Product {
    sku: ID!,
    name: String!,
    brand: String,
    price: Float,
    quantity: Int,
    description: String,
    weight: Float,
    image: String
}

# There can only be one Query
type Query {
    # products(brand: String!):[Product]
    product(sku: ID): Product
}

